<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    attributeFormDefault="unqualified"
    elementFormDefault="qualified"
    id="sync">
  <xs:include schemaLocation="monad.xsd"/>
  <xs:element name="hall_api" type="hallApiType"/>
  <xs:complexType name="hallApiType">
    <xs:sequence>
      <xs:element type="xs:string" name="log_file" minOccurs="1" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>配置日志文件的路径</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element type="xs:string" name="local_store_dir" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>本地化存储的配置</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element type="webType" name="web" minOccurs="1" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>配置Web服务器相关参数</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element type="apiType" name="api" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>api 相关参数配置</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element type="syncDictType" name="sync_dict" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>脱机采集字典同步相关参数配置</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element type="cronType" name="sync62_cron" default="0 0 * * * ? *">
        <xs:annotation>
          <xs:documentation>同步62数据定时任务</xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="apiType">
    <xs:sequence>
      <xs:element type="databaseType" name="database" minOccurs="1" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="syncDictType">
    <xs:sequence>
      <xs:element type="xs:string" name="url" minOccurs="1" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>7.0的hall-api服务器URL</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element type="cronType" name="cron" default="0 0 0 * * ? *">
        <xs:annotation>
          <xs:documentation>字典同步定时器</xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
</xs:schema>