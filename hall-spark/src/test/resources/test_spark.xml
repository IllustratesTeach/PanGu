<?xml version="1.0" encoding="UTF-8"?>
<nirvana_spark>
  <host>127.0.0.1</host>
  <app_name>spark</app_name>
  <master_server>local[1]</master_server>
  <kafka_server>10.1.7.140:9092</kafka_server>
  <kafka_topic_name>DBDATA</kafka_topic_name>
  <!-- 图像源数据提供的服务类 -->
  <image_provider_class>nirvana.hall.spark.internal.FPTImageProvider</image_provider_class>
  <!-- 特征数据保存的服务类 -->
  <data_saver_class>nirvana.hall.spark.internal.GafisPartitionRecordsSaver</data_saver_class>
  <hdfs_server>None</hdfs_server>
  <partitions_num>4</partitions_num>
  <is_new_feature>true</is_new_feature>
  <is_extractor_bin>true</is_extractor_bin>
  <!-- 支持多种数据源，可以和image_provider_class以及 data_saver_class配合使用 -->
  <database_list>
    <database name="gafis-image">
      <driver>oracle.jdbc.driver.OracleDriver</driver>
      <user>nanjing</user>
      <password>nanjing</password>
      <url>jdbc:oracle:thin:@10.1.7.143:1521:gafisdb</url>
    </database>
    <database name="gafis-mnt">
      <driver>oracle.jdbc.driver.OracleDriver</driver>
      <user>nanjing</user>
      <password>nanjing</password>
      <url>jdbc:oracle:thin:@10.1.7.143:1521:gafisdb</url>
    </database>
  </database_list>
  <properties>
    <!--
    系统内已经定义的如下:
    decompress.gfs.direct   boolean  //是否针对GFS的数据采取直接解压缩模式
    decompress.wsq.direct   boolean  //是否针对WSQ的数据采取直接解压缩模式
    decompress.server       string   //解压缩服务器地址
    extractor.direct        boolean  // 是否进行直接提特征模式
    extractor.server        string   // 提取特征的时候http服务器
    extractor.bin.support   boolean  // 是否支持提取纹线数据

    系统属性,除了系统内置的属性之外，还可以增加和自己类相关的自定义属性
    -->
    <property key="fpt.file.server" value="http://10.1.7.78/fpt"/>
    <property key="decompress.gfs.direct" value="true"/>
    <property key="decompress.wsq.direct" value="true"/>
    <property key="decompress.server" value="http://10.1.7.79/api"/>
  </properties>
</nirvana_spark>