<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
<!-- 
   Copyright 2011,2012,2013,2014,2015 Jun Tsai. All rights reserved.
   site: http://www.ganshane.com
-->

  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>../support/config</directory>
      <includes>
        <include>hall-stream.xml.example</include>
      </includes>
      <outputDirectory>config</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/nirvana/hall/stream</directory>
      <includes>
        <include>stream.xsd</include>
      </includes>
      <outputDirectory>doc/xsd</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../support/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>hall-stream</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>../support/doc</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>changelog.txt</include>
        <include>README.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../hall-api</directory>
      <outputDirectory>doc/thirdparty</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/dependencies</directory>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
